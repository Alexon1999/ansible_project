{
    "name": "Ansible Dev Env",
    "image": "mcr.microsoft.com/devcontainers/python:3.10",
    "features": {
      "ghcr.io/devcontainers-extra/features/ansible:2": {},
      "ghcr.io/hspaans/devcontainer-features/ansible-lint:1": {},
      "ghcr.io/roul/devcontainer-features/vault:1": {}
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "redhat.ansible",
          "ms-python.python",
          "github.copilot"
        ],
        "settings": {
          "ansible.ansible.path": "/usr/local/bin/ansible",
          "ansible.python.interpreterPath": "/usr/local/bin/python",
          "python.defaultInterpreterPath": "/usr/local/bin/python"
        }
      }
    },
    "forwardPorts": [8200],
    "postCreateCommand": "vault server -dev &", // start Vault in dev mode
    "remoteEnv": {
      "VAULT_ADDR": "http://127.0.0.1:8200", // Vault server address
      "VAULT_TOKEN": "dev-root-token"        // Development mode token
    }
  }
  